<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/RegisTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="username"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RegisTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/RegisTextUsername"
        app:layout_constraintTop_toBottomOf="@+id/RegisTextUsername" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrasi"
        app:layout_constraintEnd_toEndOf="@+id/RegisTextUsername"
        app:layout_constraintTop_toBottomOf="@+id/RegisTextPassword" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="83dp"
        android:layout_height="27dp"
        android:text="REGISTRASI"
        app:layout_constraintBottom_toTopOf="@+id/RegisTextUsername"
        app:layout_constraintEnd_toEndOf="@+id/RegisTextUsername"
        app:layout_constraintStart_toStartOf="@+id/RegisTextUsername" />
</androidx.constraintlayout.widget.ConstraintLayout>